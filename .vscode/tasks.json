{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "${file}",
                "/usr/local/include/glad.c",
                "-fdiagnostics-color=always",
                "-lglfw",
                "-lvulkan",
                "-ldl",
                "-lpthread",
                "-lX11",
                "-lXxf86vm",
                "-lXrandr",
                "-lXi",
                "-lglut",
                "-lGL",
                "-lGLU",
                "-lglfw3",
                "-lm",
                "-ldl",
                "-lXinerama",
                "-lXcursor",
                "-lGLEW",
                // "-lrefblas", //找不到
                // "-lcblas", //找不到
                // "-lgfortran",
                "-g",
                "-o",
                "${fileDirname}/.bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}